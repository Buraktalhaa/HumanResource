<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="7" author="Ayşe Şule">

        <createTable tableName="employee_project">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="project_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="deleted" type="VARCHAR(1)" defaultValue="N">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <!-- Foreign Keys -->
        <addForeignKeyConstraint
                baseTableName="employee_project"
                baseColumnNames="employee_id"
                referencedTableName="employee"
                referencedColumnNames="id"
                constraintName="fk_employee_project_employee"/>

        <addForeignKeyConstraint
                baseTableName="employee_project"
                baseColumnNames="project_id"
                referencedTableName="project"
                referencedColumnNames="id"
                constraintName="fk_employee_project_project"/>

    </changeSet>

</databaseChangeLog>
